[Desktop Entry]
Exec=firestorm-viewer %U
Icon=org.firestormviewer.FirestormViewer
Comment=Client for accessing 3D virtual worlds
Name=Firestorm Viewer
StartupNotify=false
Categories=Application;X-Internet;Network;Game;
Type=Application
Terminal=false
StartupWMClass=do-not-directly-run-firestorm-bin
MimeType=x-scheme-handler/secondlife;
PrefersNonDefaultGPU=true
Actions=DefaultGPU;

[Desktop Action DefaultGPU]
Exec=env __GLX_VENDOR_LIBRARY_NAME="" firestorm-viewer %U
Name=Launch on default GPU
